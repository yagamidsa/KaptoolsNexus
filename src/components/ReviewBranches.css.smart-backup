/* ================================
   ðŸ”¥ FILE DIFF VIEWER STYLES (TEMA OSCURO CORREGIDO)
   ================================ */

/* File Diff Overlay */
.file-diff-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.85);
    backdrop-filter: blur(8px);
    display: flex;
    align-items: flex-start;
    justify-content: center;
    z-index: 10001;
    padding: 10px;
    animation: diffFadeIn 0.3s ease-out;
    overflow-y: auto;
}

@keyframes diffFadeIn {
    from {
        opacity: 0;
    }

    to {
        opacity: 1;
    }
}

.file-diff-modal {
    background: linear-gradient(135deg, rgba(15, 15, 25, 0.98) 0%, rgba(25, 25, 35, 0.98) 100%);
    border: 2px solid rgba(108, 92, 231, 0.4);
    border-radius: 12px;
    box-shadow:
        0 25px 50px rgba(0, 0, 0, 0.8),
        0 0 0 1px rgba(255, 255, 255, 0.1);
    width: calc(100vw - 20px);
    height: calc(100vh - 20px);
    max-width: 1400px;
    max-height: 900px;
    min-width: 320px;
    min-height: 400px;
    display: flex;
    flex-direction: column;
    overflow: hidden;
    animation: diffSlideIn 0.3s ease-out;
    backdrop-filter: blur(20px);
    margin-top: 10px;
}

@keyframes diffSlideIn {
    from {
        opacity: 0;
        transform: scale(0.95) translateY(20px);
    }

    to {
        opacity: 1;
        transform: scale(1) translateY(0);
    }
}

/* Header */
.file-diff-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 12px 16px;
    border-bottom: 1px solid rgba(108, 92, 231, 0.2);
    background: rgba(15, 15, 25, 0.8);
    flex-shrink: 0;
    min-height: 48px;
    position: relative;
    z-index: 10002;
}

.file-diff-title {
    display: flex;
    align-items: center;
    gap: 12px;
    flex: 1;
    min-width: 0;
}

.file-diff-icon {
    font-size: 20px;
    color: #ffffff;
    flex-shrink: 0;
}

.file-diff-info {
    display: flex;
    flex-direction: column;
    gap: 4px;
    min-width: 0;
    flex: 1;
}

.file-diff-info h3 {
    margin: 0;
    font-size: 14px;
    font-weight: 600;
    color: #ffffff;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Helvetica, Arial, sans-serif;
    max-width: 300px;
}

.change-type-badge {
    padding: 4px 8px;
    border-radius: 6px;
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    width: fit-content;
}

.change-type-badge.text-green {
    background: rgba(0, 255, 135, 0.2);
    color: #00ff87;
    border: 1px solid rgba(0, 255, 135, 0.3);
}

.change-type-badge.text-red {
    background: rgba(239, 68, 68, 0.2);
    color: #ef4444;
    border: 1px solid rgba(239, 68, 68, 0.3);
}

.change-type-badge.text-yellow {
    background: rgba(251, 191, 36, 0.2);
    color: #fbbf24;
    border: 1px solid rgba(251, 191, 36, 0.3);
}

.change-type-badge.text-blue {
    background: rgba(59, 130, 246, 0.2);
    color: #3b82f6;
    border: 1px solid rgba(59, 130, 246, 0.3);
}

.file-diff-actions {
    display: flex;
    align-items: center;
    gap: 16px;
    flex-shrink: 0;
}

.file-diff-stats {
    display: flex;
    gap: 12px;
    font-size: 14px;
    font-weight: 600;
    font-family: 'SFMono-Regular', 'Consolas', 'Liberation Mono', monospace;
}

.file-diff-stats .additions {
    color: #00ff87;
}

.file-diff-stats .deletions {
    color: #ef4444;
}

.file-diff-close {
    width: 32px;
    height: 32px;
    border: 1px solid rgba(108, 92, 231, 0.3);
    background: rgba(255, 107, 157, 0.1);
    border-radius: 6px;
    color: #ff6b9d;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 16px;
    font-weight: bold;
    transition: all 0.2s ease;
    flex-shrink: 0;
    position: absolute;
    top: 8px;
    right: 8px;
    z-index: 10003;
}

.file-diff-close:hover {
    background: rgba(255, 107, 157, 0.2);
    border-color: rgba(255, 107, 157, 0.5);
    color: #ff6b9d;
    transform: scale(1.05);
}

/* Mode Toggle */
.diff-mode-toggle {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 12px;
    padding: 12px 20px;
    border-bottom: 1px solid rgba(108, 92, 231, 0.2);
    background: rgba(26, 29, 58, 0.6);
    flex-shrink: 0;
    min-height: 56px;
}

.diff-mode-toggle>div:first-child {
    display: flex;
    gap: 12px;
    /* Espacio entre botones lado a lado */
    align-items: center;
}

.mode-button {
    padding: 8px 16px;
    border: 1px solid rgba(108, 92, 231, 0.3);
    background: rgba(108, 92, 231, 0.1);
    color: #ffffff;
    border-radius: 8px;
    cursor: pointer;
    font-size: 14px;
    font-weight: 500;
    transition: all 0.2s ease;
    display: flex;
    align-items: center;
    gap: 8px;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Helvetica, Arial, sans-serif;
    white-space: nowrap;
}

.mode-button:hover {
    background: rgba(108, 92, 231, 0.2);
    border-color: rgba(108, 92, 231, 0.5);
    color: #ffffff;
    transform: translateY(-1px);
}

.mode-button.active {
    background: rgba(108, 92, 231, 0.3);
    border-color: rgba(108, 92, 231, 0.6);
    color: #ffffff;
    box-shadow: 0 2px 4px rgba(108, 92, 231, 0.2);
}

.mode-info {
    display: flex;
    align-items: center;
    gap: 8px;
}

.mode-info .scroll-hint {
    font-size: 13px;
    color: rgba(160, 163, 189, 0.8);
    font-style: italic;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Helvetica, Arial, sans-serif;
}

/* Content Container */
.file-diff-content {
    flex: 1;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    min-height: 0;
    background: rgba(26, 29, 58, 0.3);
}

/* Unified View */
.diff-viewer.unified {
    flex: 1;
    overflow: auto;
    background: rgba(26, 29, 58, 0.3);
}

/* Side by Side View */
.diff-viewer.side-by-side {
    display: flex;
    height: 100%;
    background: rgba(26, 29, 58, 0.3);
}

.diff-panel {
    flex: 1;
    display: flex;
    flex-direction: column;
    border-right: 1px solid rgba(108, 92, 231, 0.2);
    min-width: 0;
    background: rgba(15, 15, 25, 0.8);
}

.diff-panel:last-child {
    border-right: none;
}

.diff-panel-header {
    padding: 12px 16px;
    background: rgba(15, 15, 25, 0.9);
    border-bottom: 1px solid rgba(108, 92, 231, 0.2);
    font-weight: 600;
    font-size: 14px;
    color: #ffffff;
    flex-shrink: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Helvetica, Arial, sans-serif;
}

.diff-panel-header.old {
    background: rgba(239, 68, 68, 0.1);
    border-bottom-color: rgba(239, 68, 68, 0.3);
}

.diff-panel-header.old .header-label {
    color: #ef4444;
    font-weight: 600;
}

.diff-panel-header.new {
    background: rgba(0, 255, 135, 0.1);
    border-bottom-color: rgba(0, 255, 135, 0.3);
}

.diff-panel-header.new .header-label {
    color: #00ff87;
    font-weight: 600;
}

.header-info {
    font-size: 12px;
    opacity: 0.8;
    font-weight: 500;
    font-family: 'SFMono-Regular', 'Consolas', 'Liberation Mono', monospace;
    color: rgba(160, 163, 189, 0.8);
}

.diff-panel-content {
    flex: 1;
    overflow: auto;
    background: rgba(26, 29, 58, 0.4);
    position: relative;
    /* ðŸ”¥ SCROLLBARS SÃšPER DELGADAS */
    scrollbar-width: thin;
    scrollbar-color: rgba(108, 92, 231, 0.5) rgba(26, 29, 58, 0.3);
}

/* ðŸ”¥ WEBKIT SCROLLBARS SÃšPER DELGADAS */
.diff-panel-content::-webkit-scrollbar,
.diff-viewer.unified::-webkit-scrollbar {
    width: 4px;
    height: 4px;
}

.diff-panel-content::-webkit-scrollbar-track,
.diff-viewer.unified::-webkit-scrollbar-track {
    background: rgba(26, 29, 58, 0.3);
    border-radius: 2px;
}

.diff-panel-content::-webkit-scrollbar-thumb,
.diff-viewer.unified::-webkit-scrollbar-thumb {
    background: rgba(108, 92, 231, 0.5);
    border-radius: 2px;
}

.diff-panel-content::-webkit-scrollbar-thumb:hover,
.diff-viewer.unified::-webkit-scrollbar-thumb:hover {
    background: rgba(108, 92, 231, 0.7);
}

.diff-panel-content::-webkit-scrollbar-corner,
.diff-viewer.unified::-webkit-scrollbar-corner {
    background: transparent;
}

/* Content Wrapper */
.diff-content-wrapper {
    min-width: max-content;
}

/* Diff Lines */
.diff-line {
    display: flex;
    font-family: 'SFMono-Regular', 'Consolas', 'Liberation Mono', 'Courier New', monospace;
    font-size: 12px;
    line-height: 20px;
    border: none;
    min-height: 20px;
    white-space: nowrap;
    color: #ffffff;
}

.diff-line:hover {
    background-color: rgba(108, 92, 231, 0.1) !important;
}

/* Line Numbers */
.line-numbers {
    display: flex;
    background: rgba(15, 15, 25, 0.8);
    border-right: 1px solid rgba(108, 92, 231, 0.2);
    user-select: none;
    flex-shrink: 0;
}

.line-number-old,
.line-number-new {
    width: 50px;
    padding: 0 8px;
    text-align: right;
    color: rgba(160, 163, 189, 0.6);
    font-size: 12px;
    line-height: 20px;
    font-weight: 400;
}

.line-number-old {
    border-right: 1px solid rgba(108, 92, 231, 0.2);
}

/* Line Content */
.line-content {
    flex: 1;
    display: flex;
    overflow: visible;
    min-width: 0;
}

.line-prefix {
    width: 20px;
    text-align: center;
    font-weight: bold;
    user-select: none;
    flex-shrink: 0;
    font-size: 12px;
    line-height: 20px;
}

.line-text {
    flex: 1;
    padding: 0 16px 0 4px;
    white-space: pre;
    overflow: visible;
    word-break: keep-all;
    min-width: 0;
    color: #ffffff;
}

/* Diff Line Types */
.diff-line-added {
    background-color: rgba(0, 255, 135, 0.1);
}

.diff-line-added .line-numbers {
    background-color: rgba(0, 255, 135, 0.15);
}

.diff-line-added .line-prefix {
    color: #00ff87;
    font-weight: bold;
}

.diff-line-deleted {
    background-color: rgba(239, 68, 68, 0.1);
}

.diff-line-deleted .line-numbers {
    background-color: rgba(239, 68, 68, 0.15);
}

.diff-line-deleted .line-prefix {
    color: #ef4444;
    font-weight: bold;
}

.diff-line-context {
    background-color: rgba(26, 29, 58, 0.2);
}

.diff-line-header {
    background-color: rgba(108, 92, 231, 0.1);
    color: #6c5ce7;
    font-weight: 600;
}

.diff-line-header .line-numbers {
    background-color: rgba(108, 92, 231, 0.15);
}

.diff-line-header .line-prefix {
    color: #6c5ce7;
    font-weight: bold;
}

.diff-line-empty {
    background-color: rgba(26, 29, 58, 0.1);
    opacity: 0.6;
}

/* Empty State */
.diff-empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 300px;
    color: rgba(160, 163, 189, 0.8);
    gap: 16px;
    background: rgba(26, 29, 58, 0.3);
}

.diff-empty-state .empty-icon {
    font-size: 48px;
    opacity: 0.5;
}

.diff-empty-state h3 {
    margin: 0;
    font-size: 18px;
    color: #ffffff;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Helvetica, Arial, sans-serif;
}

.diff-empty-state p {
    margin: 0;
    font-size: 14px;
    text-align: center;
    color: rgba(160, 163, 189, 0.8);
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Helvetica, Arial, sans-serif;
}

/* Loading Overlay para File Diff */
.loading-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.8);
    backdrop-filter: blur(4px);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 10000;
}

.loading-overlay .loading-spinner {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 16px;
    color: #ffffff;
    background: rgba(15, 15, 25, 0.9);
    padding: 24px 32px;
    border-radius: 12px;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(108, 92, 231, 0.3);
}

.loading-overlay .spinner {
    width: 32px;
    height: 32px;
    border: 3px solid rgba(108, 92, 231, 0.3);
    border-top: 3px solid #6c5ce7;
    border-radius: 50%;
    animation: diffSpin 1s linear infinite;
}

@keyframes diffSpin {
    0% {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(360deg);
    }
}

/* ================================
   ðŸ”¥ RESPONSIVE DESIGN
   ================================ */

/* Tablet */
@media (max-width: 1024px) {
    .file-diff-modal {
        width: calc(100vw - 16px);
        height: calc(100vh - 16px);
        margin-top: 8px;
    }

    .file-diff-header {
        padding: 12px 16px;
    }

    .file-diff-title {
        padding-right: 50px;
        /* Menos espacio en tablet */
    }

    .file-diff-header-bottom {
        padding: 0 60px;
        /* Menos padding en tablet */
        gap: 16px;
    }

    .file-diff-info h3 {
        font-size: 14px;
    }

    .file-diff-close {
        top: 12px;
        right: 16px;
        width: 32px;
        height: 32px;
        font-size: 16px;
    }

    .diff-mode-toggle {
        padding: 10px 16px;
        min-height: auto;
    }

    .diff-mode-toggle>div:first-child {
        gap: 8px;
    }

    .mode-info {
        justify-content: center;
    }

    .line-number-old,
    .line-number-new {
        width: 40px;
        font-size: 11px;
    }

    .diff-line {
        font-size: 11px;
        line-height: 18px;
    }
}

/* Mobile */
@media (max-width: 768px) {
    .file-diff-overlay {
        padding: 0;
        align-items: flex-start;
    }

    .file-diff-modal {
        width: 100vw;
        height: 100vh;
        min-width: unset;
        border-radius: 0;
        max-width: none;
        max-height: none;
        margin-top: 0;
    }

    .file-diff-header {
        padding: 12px 16px;
        gap: 12px;
    }

    .file-diff-title {
        padding-right: 45px;
        /* Menos espacio en mobile */
    }

    .file-diff-header-top {
        gap: 12px;
    }

    .file-diff-header-bottom {
        padding: 0 50px;
        /* Menos padding en mobile */
        gap: 12px;
        flex-direction: column;
        /* Stack vertical en mobile */
    }

    .file-diff-info h3 {
        font-size: 13px;
    }

    .file-diff-close {
        width: 32px;
        height: 32px;
        font-size: 16px;
        top: 12px;
        right: 16px;
    }

    .diff-mode-toggle {
        padding: 8px 16px;
        gap: 8px;
        min-height: auto;
    }

    .diff-mode-toggle>div:first-child {
        gap: 8px;
        justify-content: center;
        flex: 1;
    }

    .mode-info {
        display: none;
    }

    .mode-button {
        flex: 1;
        max-width: 120px;
        font-size: 12px;
        padding: 6px 12px;
    }

    /* Stack panels vertically on mobile */
    .diff-viewer.side-by-side {
        flex-direction: column;
    }

    .diff-panel {
        border-right: none;
        border-bottom: 1px solid rgba(108, 92, 231, 0.2);
        max-height: 45vh;
        min-height: 200px;
    }

    .diff-panel:last-child {
        border-bottom: none;
        max-height: 45vh;
    }

    .diff-panel-header {
        padding: 6px 8px;
        font-size: 12px;
    }

    .line-number-old,
    .line-number-new {
        width: 35px;
        font-size: 10px;
        padding: 0 4px;
    }

