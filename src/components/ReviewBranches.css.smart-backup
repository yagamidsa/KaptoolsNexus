/* Responsive adjustments */
@media (max-width: 768px) {
    .refresh-button {
        min-width: 100px;
        font-size: 12px;
        padding: 8px 12px;
    }

    .close-button {
        width: 40px;
        height: 40px;
        min-width: 40px;
    }

    .close-button .action-icon {
        font-size: 16px;
    }

    .refresh-icon {
        font-size: 14px;
    }
}

@media (max-width: 480px) {
    .refresh-button {
        min-width: 80px;
        font-size: 11px;
        padding: 6px 10px;
    }

    .close-button {
        width: 36px;
        height: 36px;
        min-width: 36px;
    }

    .close-button .action-icon {
        font-size: 14px;
    }

    .refresh-icon {
        font-size: 12px;
    }
}


.branches-controls {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
    gap: 20px;
    flex-wrap: wrap;
}

.controls-left,
.controls-right {
    display: flex;
    align-items: center;
    gap: 16px;
}

.filter-group,
.search-group,
.sort-group {
    display: flex;
    align-items: center;
    gap: 8px;
}

.filter-label {
    color: #ffffff;
    font-size: 14px;
    font-weight: 500;
    white-space: nowrap;
}

.filter-select {
    background: rgba(26, 29, 58, 0.8);
    border: 1px solid rgba(108, 92, 231, 0.3);
    border-radius: 8px;
    padding: 8px 12px;
    color: #ffffff;
    font-size: 14px;
    min-width: 160px;
}

.filter-select:focus {
    outline: none;
    border-color: rgba(108, 92, 231, 0.6);
    box-shadow: 0 0 0 2px rgba(108, 92, 231, 0.2);
}

.search-input-container {
    position: relative;
    display: flex;
    align-items: center;
}

.search-icon {
    position: absolute;
    left: 12px;
    color: rgba(160, 163, 189, 0.6);
    z-index: 1;
    font-size: 16px;
}

.search-input {
    background: rgba(26, 29, 58, 0.8);
    border: 1px solid rgba(108, 92, 231, 0.3);
    border-radius: 8px;
    padding: 8px 12px 8px 40px;
    color: #ffffff;
    font-size: 14px;
    width: 300px;
}

.search-input:focus {
    outline: none;
    border-color: rgba(108, 92, 231, 0.6);
    box-shadow: 0 0 0 2px rgba(108, 92, 231, 0.2);
}

.search-input::placeholder {
    color: rgba(160, 163, 189, 0.6);
}

.sort-order-button {
    background: rgba(108, 92, 231, 0.1);
    border: 1px solid rgba(108, 92, 231, 0.3);
    border-radius: 6px;
    padding: 6px 8px;
    color: #ffffff;
    cursor: pointer;
    transition: all 0.3s ease;
    font-size: 16px;
    font-weight: bold;
}

.sort-order-button:hover {
    background: rgba(108, 92, 231, 0.2);
}

.status-message {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px 16px;
    border-radius: 8px;
    margin-bottom: 16px;
    font-size: 14px;
    font-weight: 500;
}

.error-message {
    background: rgba(239, 68, 68, 0.1);
    border: 1px solid rgba(239, 68, 68, 0.3);
    color: #ef4444;
}

.success-message {
    background: rgba(0, 255, 135, 0.1);
    border: 1px solid rgba(0, 255, 135, 0.3);
    color: #00ff87;
}

.status-icon {
    font-size: 16px;
}

.repo-status {
    display: flex;
    align-items: center;
    gap: 24px;
    padding: 12px 16px;
    background: rgba(26, 29, 58, 0.6);
    border: 1px solid rgba(108, 92, 231, 0.2);
    border-radius: 8px;
    margin-bottom: 20px;
}

.status-item {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 14px;
    color: #ffffff;
}

.status-indicator {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: #ef4444;
}

.status-indicator.active {
    background: #00ff87;
    box-shadow: 0 0 8px rgba(0, 255, 135, 0.5);
}

.status-summary {
    margin-left: auto;
    color: rgba(160, 163, 189, 0.8);
    font-size: 14px;
}

.branches-table-container {
    background: rgba(26, 29, 58, 0.3);
    border: 1px solid rgba(108, 92, 231, 0.2);
    border-radius: 12px;
    overflow: hidden;
}

.loading-state,
.empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 60px 20px;
    color: rgba(160, 163, 189, 0.8);
    gap: 16px;
}

.loading-spinner {
    font-size: 32px;
    animation: pulse 1.5s ease-in-out infinite alternate;
}

@keyframes pulse {
    from {
        opacity: 0.5;
    }

    to {
        opacity: 1;
    }
}

.empty-icon {
    font-size: 48px;
    margin-bottom: 8px;
}

.empty-state h3 {
    margin: 0;
    font-size: 18px;
    color: #ffffff;
}

.empty-state p {
    margin: 0;
    font-size: 14px;
    text-align: center;
}

.branches-table {
    width: 100%;
}

.table-header {
