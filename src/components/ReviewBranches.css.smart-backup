}

.author-icon,
.date-icon {
    font-size: 16px;
}

.author-name {
    color: #ffffff;
    font-weight: 500;
}

.commit-info {
    display: flex;
    align-items: center;
    gap: 8px;
    width: 100%;
}

.commit-icon {
    font-size: 16px;
}

.commit-details {
    display: flex;
    flex-direction: column;
