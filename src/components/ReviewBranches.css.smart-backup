}

.behind-cell {
    display: flex;
    align-items: center;
    justify-content: center;
}

.behind-info {
    display: flex;
    align-items: center;
    justify-content: center;
}

.behind-badge {
    background: rgba(239, 68, 68, 0.2);
    color: #ef4444;
    border: 1px solid rgba(239, 68, 68, 0.3);
    font-size: 11px;
    font-weight: 600;
    padding: 2px 6px;
    border-radius: 4px;
    font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
}

.up-to-date {
