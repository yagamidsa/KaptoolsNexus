/* ReviewBranches.css - Estilos completos para Review Branches */

.review-branches-container {
    background: linear-gradient(135deg, rgba(15, 15, 25, 0.95) 0%, rgba(25, 25, 35, 0.95) 100%);
    border: 1px solid rgba(108, 92, 231, 0.3);
    border-radius: 20px;
    padding: 24px;
    height: calc(100vh - 120px);
    overflow-y: auto;
    backdrop-filter: blur(20px);
    box-shadow:
        0 20px 40px rgba(0, 0, 0, 0.5),
        0 0 0 1px rgba(255, 255, 255, 0.05);
    animation: slideIn 0.5s ease-out forwards;
}

@keyframes slideIn {
    from {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.branches-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 24px;
    padding-bottom: 16px;
    border-bottom: 1px solid rgba(108, 92, 231, 0.2);
}

.header-left {
    display: flex;
    align-items: center;
    gap: 16px;
}

.header-icon {
    background: linear-gradient(45deg, #6c5ce7, #ff6b9d);
    border-radius: 12px;
    padding: 12px;
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24px;
}

.header-info {
    display: flex;
    flex-direction: column;
    gap: 4px;
}

.header-title {
    font-size: 24px;
    font-weight: 700;
    background: linear-gradient(135deg, #ffffff 0%, #6c5ce7 50%, #ff6b9d 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin: 0;
}

.header-subtitle {
    color: rgba(160, 163, 189, 0.8);
    font-size: 14px;
    margin: 0;
}

.header-actions {
    display: flex;
    gap: 12px;
}

.action-button {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 10px 16px;
    border: 1px solid rgba(108, 92, 231, 0.3);
    border-radius: 8px;
    background: rgba(108, 92, 231, 0.1);
    color: #ffffff;
    font-size: 14px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
}

.action-button:hover:not(:disabled) {
    background: rgba(108, 92, 231, 0.2);
    border-color: rgba(108, 92, 231, 0.5);
    transform: translateY(-1px);
}

.action-button:disabled {
    opacity: 0.5;
    cursor: not-allowed;
}

.refresh-button {
    background: linear-gradient(135deg, rgba(0, 255, 135, 0.15) 0%, rgba(0, 255, 135, 0.25) 100%);
    border: 1px solid rgba(0, 255, 135, 0.4);
    color: #00ff87;
    position: relative;
    overflow: hidden;
    min-width: 120px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    box-shadow:
        0 4px 12px rgba(0, 255, 135, 0.2),
        inset 0 1px 0 rgba(255, 255, 255, 0.1);
}

.refresh-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s;
}

.refresh-button:hover:not(:disabled) {
    background: linear-gradient(135deg, rgba(0, 255, 135, 0.25) 0%, rgba(0, 255, 135, 0.35) 100%);
    border-color: rgba(0, 255, 135, 0.6);
    transform: translateY(-2px);
    box-shadow:
        0 6px 20px rgba(0, 255, 135, 0.3),
        inset 0 1px 0 rgba(255, 255, 255, 0.2);
}


.refresh-button:hover:not(:disabled)::before {
    left: 100%;
}

.refresh-button:active {
    transform: translateY(0);
    box-shadow:
        0 2px 8px rgba(0, 255, 135, 0.4),
        inset 0 1px 0 rgba(255, 255, 255, 0.1);
}

.refresh-icon {
    transition: transform 0.3s ease;
    font-size: 16px;
    filter: drop-shadow(0 0 4px rgba(0, 255, 135, 0.5));
}

.refresh-icon.spinning {
    animation: smoothSpin 1.2s cubic-bezier(0.4, 0.0, 0.2, 1) infinite;
}

@keyframes smoothSpin {
    0% {
        transform: rotate(0deg) scale(1);
    }

    50% {
        transform: rotate(180deg) scale(1.1);
        filter: drop-shadow(0 0 8px rgba(0, 255, 135, 0.8));
    }

    100% {
        transform: rotate(360deg) scale(1);
    }
}

.review-branches .close-button {
    background: linear-gradient(135deg, rgba(255, 107, 157, 0.15) 0%, rgba(255, 107, 157, 0.25) 100%);
    border: 1px solid rgba(255, 107, 157, 0.4);
    color: #ff6b9d;
    position: relative;
    overflow: hidden;
    min-width: 44px;
    width: 44px;
    height: 44px;
    padding: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    font-weight: 700;
    box-shadow:
        0 4px 12px rgba(255, 107, 157, 0.2),
        inset 0 1px 0 rgba(255, 255, 255, 0.1);
    transition: all 0.3s cubic-bezier(0.4, 0.0, 0.2, 1);
}

.review-branches .close-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle, rgba(255, 107, 157, 0.3) 0%, transparent 70%);
    opacity: 0;
    transition: opacity 0.3s ease;
    border-radius: 50%;
}


close-button:hover:not(:disabled) {
    background: linear-gradient(135deg, rgba(255, 107, 157, 0.25) 0%, rgba(255, 107, 157, 0.4) 100%);
    border-color: rgba(255, 107, 157, 0.6);
    transform: translateY(-3px) scale(1.05);
    box-shadow:
        0 8px 25px rgba(255, 107, 157, 0.4),
        inset 0 1px 0 rgba(255, 255, 255, 0.2);
}

.close-button:hover:not(:disabled)::before {
    opacity: 1;
}

.close-button:active {
    transform: translateY(-1px) scale(0.98);
    box-shadow:
        0 4px 15px rgba(255, 107, 157, 0.5),
        inset 0 1px 0 rgba(255, 255, 255, 0.1);
}


