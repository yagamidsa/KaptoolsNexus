/* Efecto de pulso mejorado para el header icon */
@keyframes iconPulse {
    from {
        box-shadow: 0 0 20px rgba(108, 92, 231, 0.3);
        transform: scale(1);
    }

    to {
        box-shadow: 0 0 30px rgba(255, 107, 157, 0.4), 0 0 40px rgba(108, 92, 231, 0.2);
        transform: scale(1.02);
    }
}

/* Efecto de rotaci√≥n suave para refresh cuando est√° spinning */
.refresh-icon.spinning {
    animation: smoothSpin 1.2s cubic-bezier(0.4, 0.0, 0.2, 1) infinite;
}

@keyframes smoothSpin {
    0% {
        transform: rotate(0deg) scale(1);
    }

    50% {
        transform: rotate(180deg) scale(1.1);
        filter: drop-shadow(0 0 8px rgba(0, 255, 135, 0.8));
    }

    100% {
        transform: rotate(360deg) scale(1);
    }
}

/* Efecto de brillo circular en hover */
.refresh-button::before,
.rb-close-button::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    background: radial-gradient(circle, rgba(255, 255, 255, 0.2) 0%, transparent 70%);
    border-radius: 50%;
    transform: translate(-50%, -50%);
    transition: all 0.3s ease;
    pointer-events: none;
    z-index: 0;
}

.refresh-button:hover::before {
    width: 100%;
    height: 100%;
}

.rb-close-button:hover::before {
    width: 100%;
    height: 100%;
}

/* Asegurar que el contenido est√© por encima del efecto */
.refresh-icon,
.rb-close-button::after {
    position: relative;
    z-index: 1;
}

/* Corregir el X del close button para que est√© por encima */
.rb-close-button::after {
    content: "‚úï";
    font-size: 20px;
    font-weight: bold;
    color: var(--primary-pink);
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 2;
}

/* Ocultar el ::before del close button ya que usamos ::after */
.rb-close-button::before {
    display: none;
}


