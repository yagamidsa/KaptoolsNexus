/* ================================
   ‚≠ï SPINNER PRINCIPAL - DRACULA STYLE
   ================================ */
.spinner-ring {
    width: 60px;
    height: 60px;
    border: 3px solid var(--dracula-current-line);
    border-top: 3px solid var(--dracula-purple);
    border-right: 3px solid var(--dracula-pink);
    border-radius: 50%;
    animation: draculaSpin 1.2s cubic-bezier(0.4, 0.0, 0.2, 1) infinite;
    position: relative;
    filter: drop-shadow(0 0 15px rgba(189, 147, 249, 0.4));
}

/* ================================
   üåü C√çRCULO INTERIOR CONTRA-ROTATORIO
   ================================ */
