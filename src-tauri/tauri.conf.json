{
  "$schema": "../gen/schemas/desktop-schema.json",
  "productName": "KapTools Nexus",
  "version": "2.0.0",
  "identifier": "com.kaptools.nexus",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "KapTools Nexus",
        "width": 1250,
        "height": 780,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src ipc: http://ipc.localhost; style-src 'self' 'unsafe-inline'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/kaptools-icon-16x16.png",
      "icons/kaptools-icon-32x32.png",
      "icons/kaptools-icon-48x48.png",
      "icons/kaptools-icon-64x64.png",
      "icons/kaptools-icon-128x128.png",
      "icons/kaptools-icon-512x512-sample.png"
    ]
  },
  "plugins": {
  "fs": {}
}
}