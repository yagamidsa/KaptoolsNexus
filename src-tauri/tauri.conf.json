{
  "$schema": "../gen/schemas/desktop-schema.json",
  "productName": "KapTools Nexus",
  "version": "2.0.0",
  "identifier": "com.kaptools.nexus",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "KapTools Nexus",
        "width": 1250,
        "height": 780,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' http://localhost:8000 https://sandbox3-kap-product-template.azurewebsites.net"
    }
  },
  "bundle": {
    "resources": ["../backend/"],
    "active": true,
    "targets": "all",
    "icon": [
      "icons/16x16.png",
      "icons/32x32.png",
      "icons/48x48.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/icon.ico",
      "icons/icon.svg",
      "icons/icon.png"
    ]
  },
  "plugins": {
  "fs": {}
}
}