{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Default capabilities for KapTools Nexus",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:app:default",
    "core:event:default",
    "core:window:default",
    "core:webview:default",
    "core:path:default",
    "core:resources:default",
    
    "fs:default",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    "fs:allow-read-dir",
    "fs:allow-copy-file",
    "fs:allow-create",
    "fs:allow-mkdir",
    "fs:allow-remove",
    "fs:allow-rename",
    "fs:allow-exists",
    "fs:allow-stat",
    "fs:allow-lstat",
    "fs:allow-fstat",
    "fs:allow-open",
    "fs:allow-size",
    "fs:allow-truncate",
    "fs:allow-watch",
    "fs:read-all",
    "fs:write-all",
    "fs:read-dirs",
    "fs:read-files",
    "fs:write-files",
    "fs:read-meta",
    "fs:scope-home",
    "fs:scope-home-recursive",
    "fs:scope-desktop",
    "fs:scope-desktop-recursive",
    "fs:scope-document",
    "fs:scope-document-recursive",
    "fs:scope-download",
    "fs:scope-download-recursive",
    "fs:scope-appdata",
    "fs:scope-appdata-recursive",
    "fs:scope-applocaldata",
    "fs:scope-applocaldata-recursive",
    "fs:scope-cache",
    "fs:scope-cache-recursive",
    "fs:scope-config",
    "fs:scope-config-recursive",
    "fs:scope-data",
    "fs:scope-data-recursive",
    "fs:scope-localdata",
    "fs:scope-localdata-recursive",
    "fs:scope-runtime",
    "fs:scope-runtime-recursive",
    "fs:scope-temp",
    "fs:scope-temp-recursive",
    
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "dialog:allow-message",
    "dialog:allow-ask",
    "dialog:allow-confirm",
    
    "opener:default",
    "opener:allow-open-url",
    "opener:allow-open-path",
    "opener:allow-reveal-item-in-dir"
  ]
}